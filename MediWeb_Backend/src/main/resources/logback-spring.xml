<configuration>
  <springProperty scope="context" name="APP_NAME" source="spring.application.name" defaultValue="mediweb"/>
  <property name="STD_PATTERN" value="%d{ISO8601} level=%-5level app=${APP_NAME} thread=%thread logger=%logger{36} msg=%msg traceId=%X{traceId:-} spanId=%X{spanId:-}%n"/>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>${STD_PATTERN}</pattern>
    </encoder>
  </appender>

  <logger name="org.springframework" level="INFO"/>
  <logger name="org.hibernate" level="WARN"/>
  <root level="INFO">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>
